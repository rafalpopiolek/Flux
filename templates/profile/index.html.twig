{% extends 'base.html.twig' %}

{% block body %}
    {% embed 'shared/_responsiveContainer.html.twig' %}
        {% block content %}
            <div class="bg-white dark:bg-gray-800 border dark:border-gray-900 py-3 px-8 rounded-sm">
                <div class="flex items-center justify-between space-x-4 dark:text-gray-300">
                    <div class="flex items-center space-x-4">
                        <div class="my-4">
                            <img src="https://placekitten.com/150/150" alt="User Avatar" class="w-16 h-16 rounded-full">
                        </div>
                        <div class="mb-4">
                            <h1 class="text-2xl font-bold">John Doe</h1>
                            <p class="text-gray-500">john.doe@example.com</p>
                        </div>
                    </div>
                    <div>
                        <a href="{{ path('app_profile_create') }}">
                            <button class="bg-transparent hover:bg-indigo-500 text-indigo-500 hover:text-white dark:hover:text-gray-300 font-semibold py-2 px-4 border border-indigo-500 hover:border-transparent rounded">
                                Edit Profile
                            </button>
                        </a>
                    </div>
                </div>
                <div class="mb-4 dark:text-gray-300 divide-y">
                    <div class="py-1">
                        <p><span class="font-bold">Age:</span> 23</p>
                        <p><span class="font-bold">Gender:</span> Male</p>
                        <p><span class="font-bold">Joined:</span> January 1, 2022</p>
                    </div>

                    <div class="py-1">
                        <p><span class="font-bold">Twitter:</span> <a class="text-blue-500" href="https://twitter.com/john-doe">https://twitter.com/john-doe</a></p>
                        <p><span class="font-bold">Website:</span> <a class="text-blue-500" href="https://john-doe.com">https://john-doe.com</a></p>
                    </div>

                    <div class="py-1">
                        <p><span class="font-bold">Posts:</span> 312</p>
                        <p><span class="font-bold">Comments:</span> 117</p>
                    </div>
                </div>
                <div class="mb-4 dark:text-gray-300">
                    <h2 class="text-xl font-bold mb-2">Bio</h2>
                    <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed do eiusmod tempor
                        incididunt ut labore et dolore magna aliqua.</p>
                </div>
            </div>
        {% endblock %}
    {% endembed %}
{% endblock %}
