{% extends 'base.html.twig' %}

{% block body %}
    {% embed 'shared/_responsiveContainer.html.twig' %}
        {% block content %}
            {% for post in posts %}
                {% include 'post/_postContainer.html.twig' with {
                    'user': post.author.firstName ~ ' ' ~ post.author.lastName,
                    'post': post.content,
                    'createdAt': post.createdAt,
                } %}
            {% endfor %}
        {% endblock %}
    {% endembed %}
{% endblock %}
